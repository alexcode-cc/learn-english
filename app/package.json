{
  "name": "learn-english",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:e2e": "cross-env VITE_HOST=localhost VITE_E2E_TEST=true vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write \"src/**/*.{ts,tsx,vue,js,jsx,json,css,scss,md}\"",
    "test": "npm run test:unit && npm run test:component && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:component": "vitest run --config vitest.component.config.ts",
    "test:e2e": "playwright test",
    "test:perf": "lhci autorun",
    "audit:security": "npm audit",
    "audit:security:fix": "npm audit fix",
    "convert:vocab": "node scripts/convert-vocab-to-csv.js",
    "check:vocab": "node scripts/convert-vocab-to-csv.js --check",
    "generate:icons": "node scripts/generate-icons.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "axios": "^1.6.7",
    "idb": "^8.0.0",
    "papaparse": "^5.4.1",
    "pinia": "^2.1.7",
    "vue": "^3.4.21",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.3.0",
    "vuetify": "^3.5.10"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/vue": "^8.0.3",
    "@types/papaparse": "^5.5.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/ui": "^1.4.0",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.5.1",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "fake-indexeddb": "^5.0.2",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "playwright": "^1.42.0",
    "prettier": "^3.2.5",
    "sharp": "^0.33.5",
    "typescript": "~5.4.0",
    "vite": "^5.2.0",
    "vite-plugin-pwa": "^0.19.0",
    "vitest": "^1.4.0",
    "vue-tsc": "^2.0.0",
    "workbox-window": "^7.0.0"
  }
}
